<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pds.app.caloriecounter">
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.pds.app.caloriecounter.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pds.app.caloriecounter.LogActivity">

        </activity>
        <activity android:name="com.pds.app.caloriecounter.PersonalDataActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.pds.app.caloriecounter.Home"
        android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.pds.app.caloriecounter.RecommendationActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.pds.app.caloriecounter.RatingActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.pds.app.caloriecounter.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.pds.app.caloriecounter.ScanningActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>

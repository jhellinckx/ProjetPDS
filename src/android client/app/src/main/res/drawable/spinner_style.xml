<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="#303030"/>
                    <corners
                        android:radius="6dp"/>
                    <padding
                        android:bottom="3dp"
                        android:left="3dp"
                        android:top="3dp"
                        android:right="3dp"/>

                </shape>
            </item>
            <item
                android:top="10dp"
                android:right="10dp">
                <bitmap android:src="@drawable/arrow"
                    android:gravity="right"/>
            </item>
        </layer-list>
    </item>

</selector>
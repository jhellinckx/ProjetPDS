<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:keyTextColor">@color/white</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/gray</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="droppyPopupStyle">@style/AppThemeCC.DroppyMenu</item>
        <item name="droppyMenuItemStyle">@style/AppThemeCC.DroppyMenuItem</item>
        <item name="droppyMenuItemTitleStyle">@style/AppThemeCC.DroppyMenuItemTitle</item>
        <item name="droppyMenuItemIconStyle">@style/AppThemeCC.DroppyMenuItemIcon</item>
    </style>



    <style name="AppEditText">
        <item name="android:background">@drawable/input_box</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@drawable/hint_color_selector</item>

    </style>

    <style name="AppButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlHighlight">@color/blue</item>
    </style>

    <style name="AppThemeCC.DroppyPopup" parent="Droppy.DroppyPopup">
    </style>
    <style name="AppThemeCC.DroppyMenu" parent="Droppy.DroppyMenu">
    </style>
    <style name="AppThemeCC.DroppyMenuSeparator" parent="Droppy.DroppyMenuSeparator">
    </style>
    <style name="AppThemeCC.DroppyMenuItem" parent="Droppy.DroppyMenuItem">
        <item name="color">@color/black</item>
    </style>
    <style name="AppThemeCC.DroppyMenuItemTitle" parent="Droppy.DroppyMenuItemTitle">
    </style>
    <style name="AppThemeCC.DroppyMenuItemIcon" parent="Droppy.DroppyMenuItemIcon">
    </style>
    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_filled_gold</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

</resources>

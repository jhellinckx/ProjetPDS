<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/rateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/rateTitle"
        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
        android:gravity="left|center_vertical"
        android:textColor = "@color/grayy"
        android:background= "@color/white"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:drawablePadding="5dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grayy" >
    </LinearLayout>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="0.5"
        android:numStars="5"
        android:rating="0"
        android:background="@color/white"
        android:progressDrawable="@drawable/ratingbar_golden"
        android:layout_gravity="center"
        android:layout_margin="1sp" />

</LinearLayout>
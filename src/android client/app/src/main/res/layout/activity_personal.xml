<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/age"
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="100sp" />

        <Spinner
            android:layout_width="111sp"
            android:layout_height="wrap_content"
            android:id="@+id/agebracket"
            android:layout_gravity="top"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView2"
            android:layout_marginLeft="31dp"
            android:background="@drawable/spinner_style"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/height"
            android:id="@+id/textView12"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_gravity="left"
            android:paddingTop="10dp" />

        <EditText
            style="@style/EditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="6"
            android:maxLength="3"
            android:id="@+id/data_height"
            android:singleLine="true"
            android:lines="1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout"
        android:layout_weight="0.44">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/weight"
            android:id="@+id/textView5"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="20sp" />

        <EditText
            style="@style/EditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="6"
            android:maxLength="6"
            android:id="@+id/data_weight"
            android:singleLine="true"
            android:textSize="20sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cal"
            android:id="@+id/textView15"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/bar_cal"
            android:layout_alignLeft="@+id/bar_cal"
            android:layout_marginBottom="20sp"
            android:textColor="#000000" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bar_cal"
            android:layout_alignBottom="@+id/constraints_cal"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/constraints_cal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="3"
            android:editable="false"
            android:id="@+id/constraints_cal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Data"
            android:id="@+id/update"
            android:layout_marginBottom="32dp"
            android:textColor="#ffffff"
            android:background="@drawable/background_button"
            android:minWidth="120sp"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</LinearLayout>